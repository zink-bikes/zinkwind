{% # Grid Block - Review %}

{% liquid
  assign block_id = 'grid-block-' | append: block.id

  # Determine if card should be clickable
  assign has_card_link = false
  if block.settings.card_link != blank
    assign has_card_link = true
  endif

  # Build classes
  assign card_classes = 'grid-block-review h-full flex flex-col '
  assign card_classes = card_classes | append: block.settings.padding | append: ' '
  assign card_classes = card_classes | append: block.settings.border_radius | append: ' '
  assign card_classes = card_classes | append: 'color-scheme color-scheme--' | append: block.settings.color_scheme | append: ' '
  assign card_classes = card_classes | append: 'border border-current border-opacity-20'

  if has_card_link
    assign card_classes = card_classes | append: ' transition-shadow hover:shadow-lg cursor-pointer'
  endif
%}

{% # Wrapper with optional link %}
{% if has_card_link %}
  <a href="{{ block.settings.card_link }}" class="{{ card_classes }}" {{ block.shopify_attributes }}>
{% else %}
  <div class="{{ card_classes }}" {{ block.shopify_attributes }}>
{% endif %}

  <div class="flex flex-col gap-4 h-full">

    {% # Star Rating %}
    <div class="flex items-center gap-1" aria-label="Rating: {{ block.settings.rating }} out of 5 stars">
      {% for i in (1..5) %}
        {% if i <= block.settings.rating %}
          <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
        {% else %}
          <svg class="w-5 h-5 text-gray-300 fill-current" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
        {% endif %}
      {% endfor %}
    </div>

    {% # Review Title %}
    {% if block.settings.title != blank %}
      <h3 class="text-lg md:text-xl font-bold">{{ block.settings.title }}</h3>
    {% endif %}

    {% # Review Description %}
    {% if block.settings.description != blank %}
      <div class="flex-grow">
        <p class="text-sm md:text-base opacity-90 leading-relaxed">{{ block.settings.description }}</p>
      </div>
    {% endif %}

    {% # Author and Verified Badge %}
    <div class="flex items-center gap-2 mt-auto pt-4 border-t border-current border-opacity-10">
      {% if block.settings.author != blank %}
        <span class="font-semibold text-sm">{{ block.settings.author }}</span>
      {% endif %}

      {% if block.settings.verified_buyer %}
        <div class="flex items-center gap-1 text-xs bg-green-100 text-green-800 px-2 py-1 rounded-full">
          <svg class="w-3 h-3 fill-current" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span class="font-medium">Verified Buyer</span>
        </div>
      {% endif %}
    </div>

  </div>

{% if has_card_link %}
  </a>
{% else %}
  </div>
{% endif %}
